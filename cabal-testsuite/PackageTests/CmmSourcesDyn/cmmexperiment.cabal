library 
  default-language: Haskell2010
  hs-source-dirs: src
  build-depends: base
  exposed-modules: Demo

  cmm-sources: cbits/HeapPrim.cmm
  if impl(ghc >=8.2)
    cmm-options: -ddump-cmm-verbose
  else
    cmm-options: -ddump-cmm

executable demo
  default-language: Haskell2010
  main-is: Main.hs
  hs-source-dirs: demo
  build-depends: base, cmmexperiment
